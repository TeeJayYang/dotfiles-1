[colors]
base03  = ${xrdb:color8}
base02  = ${xrdb:color0}
base01  = ${xrdb:color10}
base00  = ${xrdb:color11}
base0   = ${xrdb:color12}
base1   = ${xrdb:color14}
base2   = ${xrdb:color7}
base3   = ${xrdb:color15}
yellow  = ${xrdb:color3}
orange  = ${xrdb:color9}
red     = ${xrdb:color1}
magenta = ${xrdb:color5}
violet  = ${xrdb:color13}
blue    = ${xrdb:color4}
cyan    = ${xrdb:color6}
green   = ${xrdb:color2}

white0 = #a4b4b9
white1 = #c3cbcc
white2 = #dce1e1

[bar/top]
monitor = ${env:MONITOR}
width = 100%
height = 24

background = ${colors.base03}
foreground = ${colors.base2}

line-size = 3

padding = 0

; Default font
font-0 = "TamzenForPowerline:size=18;2"

; Japanese characters
font-1 = "M+ 2c:style=regular:size=13;2"

; Icons
font-2 = "Font Awesome 5 Free:style=Regular:pixelsize=10;2"
font-3 = "Font Awesome 5 Free:style=Solid:pixelsize=10;2"
font-4 = "Font Awesome 5 Brands:pixelsize=10;2"

tray-position = right

modules-left = i3 mpd
modules-center = date separator weather
modules-right = memory cpu wired-network network pulseaudio battery

[module/i3]
type = internal/i3
pin-workspaces = true
strip-wsnumbers = true
index-sort = true

format = <label-state> <label-mode>

label-focused = %name%
label-focused-foreground = ${colors.base03}
label-focused-background = ${colors.base2}
label-focused-padding = 1

label-unfocused = %name%
label-unfocused-foreground = ${colors.base03}
label-unfocused-background = ${colors.base0}
label-unfocused-padding = 1

label-visible = %name%
label-visible-foreground = ${colors.base03}
label-visible-background = ${colors.base0}
label-visible-padding = 1

label-urgent = %name%
label-urgent-foreground = ${colors.base03}
label-urgent-background = ${colors.red}
label-urgent-padding = 1

[module/mpd]
type = internal/mpd

host = 127.0.0.1
port = 6600

format-online = <icon-prev> <toggle> <icon-next> <label-song>
format-online-padding = 2

format-offline = <label-offline>
format-offline-padding = 2

label-song = %artist% - %title%
label-offline = MPD is offline
icon-play = 
icon-pause = 
icon-prev = 
icon-next = 

[module/date]
type = internal/date

