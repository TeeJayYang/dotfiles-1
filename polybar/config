[colors]
# BASE_02 at 70% lightness
shade0 = #ABB7BA
# BASE_02 at 80% lightness
shade1 = #C7CFD1
# BASE_02 at 90% lightness
shade2 = #E3E7E8

[bar/top]
monitor = ${env:MONITOR}
width = 100%
height = 24

background = ${xrdb:color8}
foreground = ${xrdb:color7}

line-size = 3

padding = 0

; Default font
font-0 = "TamzenForPowerline:size=18;2"

; Japanese characters
font-1 = "M+ 2c:style=regular:size=13;2"

; Icons
font-2 = "Font Awesome 5 Free:style=Regular:pixelsize=10;2"
font-3 = "Font Awesome 5 Free:style=Solid:pixelsize=10;2"
font-4 = "Font Awesome 5 Brands:pixelsize=10;2"

tray-position = right

modules-left = i3 mpd
modules-center = date separator weather
modules-right = memory cpu wired-network network pulseaudio battery

[module/i3]
type = internal/i3
pin-workspaces = true
strip-wsnumbers = true
index-sort = true

format = <label-state> <label-mode>

label-focused = %name%
label-focused-foreground = ${xrdb:color8}
label-focused-background = ${xrdb:color7}
label-focused-padding = 1

label-unfocused = %name%
label-unfocused-foreground = ${xrdb:color8}
label-unfocused-background = ${xrdb:color12}
label-unfocused-padding = 1

label-visible = %name%
label-visible-foreground = ${xrdb:color8}
label-visible-background = ${xrdb:color12}
label-visible-padding = 1

label-urgent = %name%
label-urgent-foreground = ${xrdb:color8}
label-urgent-background = ${xrdb:color1}
label-urgent-padding = 1

[module/mpd]
type = internal/mpd

host = 127.0.0.1
port = 6600

format-online = <icon-prev> <toggle> <icon-next> <label-song>
format-online-padding = 2

format-offline = <label-offline>
format-offline-padding = 2

label-song = %artist% - %title%
label-offline = MPD is offline
icon-play = 
icon-pause = 
icon-prev = 
icon-next = 

[module/date]
type = internal/date

date = %a, %b %d
time = %H:%M

label = %date% - %time%

[module/separator]
type = custom/text
content = " | "

[module/weather]
type = custom/script
exec = get-weather
interval = 300

[module/memory]
type = internal/memory

interval = 3

label =  %percentage_used%%
label-foreground = ${xrdb:color8}
label-background = ${colors.shade0}
label-padding = 1

[module/cpu]
type = internal/cpu

interval = 3

label =  %percentage%%
label-foreground = ${xrdb:color8}
label-background = ${colors.shade1}
label-padding = 1

[module/wired-network]
type = internal/network

; Use following command to get wifi interface
; $ iwconfig
interface = enp1s0

label-connected =  %local_ip%
label-connected-foreground = ${xrdb:color8}
label-connected-background = ${colors.shade2}
label-connected-padding-left = 1

[module/network]
type = internal/network

; Use following command to get wifi interface
; $ iwconfig
interface = wlp2s0

label-connected =  %essid%
label-connected-foreground = ${xrdb:color8}
label-connected-background = ${colors.shade2}
label-connected-padding = 1

label-disconnected =  none
label-disconnected-foreground = ${xrdb:color8}
label-disconnected-background = ${colors.shade2}
