[module/pulseaudio]
type = internal/pulseaudio

format-volume = <ramp-volume> <label-volume>
format-volume-foreground = ${xrdb:color8}
format-volume-background = ${colors.shade1}
format-volume-padding = 1

label-muted =  muted
label-muted-foreground = ${xrdb:color8}
label-muted-background = ${colors.shade1}
label-muted-padding = 1

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/battery]
type = internal/battery

full-at = 99

; Use following command to get battery and adapter
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = ADP0

format-charging = <animation-charging> <label-charging>
format-charging-foreground = ${xrdb:color8}
format-charging-background = ${colors.shade0}

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-foreground = ${xrdb:color8}
format-discharging-background = ${colors.shade0}

label-charging = %percentage%%
label-charging-foreground = ${xrdb:color8}
label-charging-background = ${colors.shade0}
label-charging-padding-right = 1

label-discharging = %percentage%%
label-discharging-foreground = ${xrdb:color8}
label-discharging-background = ${colors.shade0}
label-discharging-padding-right = 1

label-full = "  %percentage%%"
label-full-foreground = ${xrdb:color8}
label-full-background = ${colors.shade0}
label-full-padding-right = 1

animation-charging-0 = " "
animation-charging-1 = " "
animation-charging-2 = " "
animation-charging-3 = " "
animation-charging-4 = " "

ramp-capacity-0 = " "
