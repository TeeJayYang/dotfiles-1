# zoom and scroll step size
set zoom-step 20
set scroll-step 80

# copy selection to system clipboard
set selection-clipboard clipboard

# enable incremental search
set incremental-search true

# zoom
map <C-i> zoom in
map <C-o> zoom out

# colors
set default-bg                  "#002b36"
set default-fg                  "#073642"

set highlight-color             "#b58900"
set highlight-active-color      "#268bd2"
set highlight-transparency      0.1

set recolor-lightcolor          "#002b36"
set recolor-darkcolor           "#eee8d5"

set recolor                     "false"
set recolor-keephue             "false"
