#!/usr/bin/env sh

amixer_info=$(amixer sget Master)

left=$(echo "$amixer_info" | grep 'Left:' | awk -F'[][]' '{ print $2 }')
right=$(echo "$amixer_info" | grep 'Right:' | awk -F'[][]' '{ print $2 }')

if echo "$amixer_info" | grep -q "\\[on\\]"; then
  robar show default "$(echo "((${left%\%}+${right%\%})/200)" | bc -l)"
else
  robar show mute "$(echo "((${left%\%}+${right%\%})/200)" | bc -l)"
fi
